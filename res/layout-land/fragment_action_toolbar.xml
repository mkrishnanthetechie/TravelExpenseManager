<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    
    >
    
    <LinearLayout  
    android:layout_height="wrap_content"  
    android:layout_width="fill_parent"    
    android:id="@+id/add_report_layout"
    android:weightSum="1"> 

    <Button
        android:id="@+id/add_report"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_add_report"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        android:text="@string/add_report"
        android:layout_weight="0.33"        
        />
	     
    <Button
        android:id="@+id/delete_report"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"        
        android:drawableTop="@drawable/ic_delete_report"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        android:text="@string/delete_report"
        android:layout_weight="0.33"
        />
    
    <Button
        android:id="@+id/view_report"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"        
        android:drawableTop="@drawable/ic_view_report"
        android:textAlignment="center"
        android:textSize="@dimen/button_text_size"
        android:text="@string/view_report"
        android:layout_weight="0.33"
        />	
    
    </LinearLayout>

</RelativeLayout>
