<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/layout_padding"
    android:scrollbars="horizontal" >

    <LinearLayout
        android:id="@+id/trip_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:id="@+id/text_trip_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/text_trip_name"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/trip_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:hint="@string/trip_name_hint"
            android:textSize="@dimen/text_size"
            android:maxLength="15"
            android:minLines="1"
            android:lines="1"            
            >

            
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_date_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_name_layout"
        android:weightSum="1" >
        
        <TextView
            android:id="@+id/start_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/start_date_text"
            android:textSize="@dimen/text_size" />
        
        <Button 
            android:id="@+id/start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="@string/date_button_text"
            android:textSize="@dimen/button_text_size"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/end_date_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_date_layout"
        android:weightSum="1" >
        
        <TextView
            android:id="@+id/end_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/end_date_text"
            android:textSize="@dimen/text_size" />
        
        <Button 
            android:id="@+id/end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="@string/date_button_text"
            android:textSize="@dimen/button_text_size"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/no_of_shares_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/end_date_layout"
        android:weightSum="1" >

        <TextView
            android:id="@+id/no_of_persons_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/no_of_persons_text"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/no_of_persons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:hint="@string/no_of_persons_text_hint"
            android:textSize="@dimen/text_size"
            android:inputType="numberDecimal"
            android:singleLine="true" 
            android:lines="1"
            android:maxLength="2"           
             />
            
        </LinearLayout>

</RelativeLayout>