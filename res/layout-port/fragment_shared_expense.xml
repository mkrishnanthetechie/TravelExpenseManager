<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/layout_padding" >

    <LinearLayout
        android:id="@+id/shared_expense_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text="@string/text_expense_amount"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/dialog_expense_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:textColor="#0000FF"
            android:textSize="@dimen/text_size" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shared_expense_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shared_expense_layout"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/shared_expense_list"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding"
            android:weightSum="1" >

            <Button
                android:id="@+id/shared_expense_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_vertical|center"
                android:text="@string/ok_button_text"
                android:textColor="#800000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>